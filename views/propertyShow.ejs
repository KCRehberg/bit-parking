<% include partials/header %>

<div class="container">
    <div class="container m-5">
        <h2>Guests List</h2>
        <div class="row ml-5">
            <div class="col-md-3 position-relative float-left">
                    <h3>SEARCH PROPERTIES</h3>
                    <a href="/admin/addproperty" class="btn btn-primary"><h5>Add a new property</h5></a>
            </div>
            <div class="col-md-9">
                <div class="row no gutters" style="max-width: 641px;"> 
                <div class="col-md-4">
                    <img class="card-img" src="<%= property.image %>">
                </div>                               
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%= property.name %></h3></a>
                        <hr></hr>
                        <p class="card-text"><%= property.address %></p>
                    </div>    
                </div>
                </div>
                <div class="row">
                    <table class="col-md-9 table">
                        <thead class="bg-dark text-white">
                            <tr>
                                <td scope="col">Tag</td>
                                <td scope="col">Unit</td>
                                <td scope="col">Permit</td>
                                <td scope="col">Time</td>
                            </tr>
                        </thead>
                        <tbody>
                    <% guests.forEach(function(guests){ %>
                        <tr>
                            <td><%= guests.tag %></td>
                            <td><%= guests.unit %></td>
                            <td><%= guests.permit %></td>
                            <td><%= guests.time %></td>
                        </tr>
                    <% }); %>
                        </tbody>
                    </table>
                    </div>
            </div>  
        </div>
    </div>        
</div>

<% include partials/footer %>