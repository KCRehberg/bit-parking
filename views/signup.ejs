<% include partials/header %>

<div class="container">
    <div id="register-form" class="card bg-primary text-left text-white p-5 mt-5">
        <h3>ADMIN REGISTER</h3>
        <p>Welcome, please enter your email and password to sign up for your <strong>Tenant Guest Parking Portal.</strong></p>
        <form action="/signup" method="POST">
            <p>Email:</p>
            <input class="form-control" placeholder="email" type="email" name="username">
            <p>Password:</p>
            <input class="form-control" placeholder="password" type="password" name="password">
            <button class="form-control btn btn-lg btn-success mt-4">Sign Up</button>
            <div class="mt-3">
                <p><a href="/login" class="text-white">already have an account?</a></p>
            </div>
        </form>
    </div>
</div>

