<% include partials/header %>

<div class="container">
    <div id="register-form" class="card bg-primary text-left text-white p-5 mt-5">
        <h3>ADMIN DASHBOARD</h3>
        <p>Welcome, please enter your email and password to access the <strong>Tenant Guest Parking Portal.</strong></p>
        <form action="/login" method="POST">
            <p>Email:</p>
            <input class="form-control" placeholder="email" type="email" name="username">
