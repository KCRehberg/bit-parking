<% include partials/header %>

<div class="container mb-5">
    <div class="row mt-5">
        <div class="col-md-4 bg-primary text-white">
            <h3 class="mt-5">Contact Us</h3>
            <p class="mt-5">911 Federal Highway <br> Boca Raton, FL 33134</p>
            <p class="mt-5">215-280-4758</p>
            <p class="mt-5">info@guestparking.com</p>
            <p class="mt-5">guestparking.net</p>
        </div>
        <div class="col-md-8 bg-light pr-5">
            <h3 class="text-primary mt-5">GET IN TOUCH</h3>
            <p>Feel free to drop us a line!</p>
            <form action="/contact" method="POST" class="form-group">
                <div class="row ml-0">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Name" name="name">
                    </div>
                    <div class="col pr-0">
                      <input type="text" class="form-control" placeholder="Subject" name="subject">
                    </div>
                </div>
                <input class="form-control m-3" type="email" name="email" placeholder="Email">
                <textarea class="form-control m-3" name="message" rows="8" cols="20"></textarea>
                <button class="float-left btn btn-lg btn-success ml-3 mb-5 px-5">Send</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>